<h2>Paddock Status</h2>
<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>DinoCount</th>
        <th>Secure</th>
    </tr>

    #foreach($paddock in $paddocks)

    <tr>
        <td>$paddock.getId()</td>
